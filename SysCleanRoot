#!/bin/bash

cclean="/usr/share/pixmaps/SysClean/ccleaner.png"
export DISPLAY=:0

(echo "0"
echo "# Отчистка корзины"
rm -rf /root/.local/share/Trash/*/** 

echo "5"
echo "# запуск bleachbit "
bleachbit --list-cleaners  > cleaners.list

echo "10"
echo "# добавление икслючений"
sed -i '/system.free_disk_space/d'  cleaners.list
sed -i '/system.memory/d' cleaners.list

echo "15"
echo "# отчистка системы средствами bleachbit"
bleachbit -c $(cat cleaners.list)  

echo "90"
echo "# Пакетные файлы конфигурации"
aptitude purge ~c -y &> /dev/null

echo "100";
echo "# готово!.. ") | zenity --window-icon="$cclean" --progress --title="Отчистка системы $USER" --text="подготовка" --auto-kill --auto-close --percentage=0 --height=200 --width=300
        
    
exit 0;
